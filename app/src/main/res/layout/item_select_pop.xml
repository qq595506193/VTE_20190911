<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ctl_select_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#7f7f7f">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_200"
        android:layout_gravity="center"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/close_x"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_appaly_set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center"
            android:text="参与评估设置"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/ck_question_01"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/checkbox_select"
            android:buttonTint="@color/black"
            android:gravity="center"
            android:text="Caprinn静脉血栓栓塞症风险评估"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_appaly_set" />

        <TextView
            android:id="@+id/tv_user_id_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="正在评估"
            android:textColor="@color/gray_text"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ck_question_01"
            app:layout_constraintLeft_toRightOf="@id/ck_question_01"
            app:layout_constraintTop_toTopOf="@id/ck_question_01" />


        <CheckBox
            android:id="@+id/ck_question_02"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/checkbox_select"
            android:buttonTint="@color/black"
            android:gravity="center"
            android:text="大出血并发症危险因素评估"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ck_question_01" />

        <TextView
            android:id="@+id/tv_user_id_02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="正在评估"
            android:textColor="@color/gray_text"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ck_question_02"
            app:layout_constraintLeft_toRightOf="@id/ck_question_02"
            app:layout_constraintTop_toTopOf="@id/ck_question_02" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/btn_sure"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>