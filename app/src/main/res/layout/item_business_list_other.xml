<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_pingguyewu_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/edit_bg_white"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="评估业务"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_yewuleixing_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/edit_bg_white"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="业务类型"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_shixian_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/edit_bg_white"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="时限"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/edit_bg_white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_over_assess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1.0"
            android:background="@drawable/btn_sure"
            android:text="不再评估"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_next_assess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1.0"
            android:background="@drawable/btn_sure"
            android:text="下次评估"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>