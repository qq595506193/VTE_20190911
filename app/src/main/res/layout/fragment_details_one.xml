<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--第一个表-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cly_visib"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/cly_01"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_table_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                android:gravity="center"
                android:text="Caprini模型评估趋势图"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


            <Button
                android:id="@+id/btn_log"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/btn_sure"
                android:text="评估"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cly_01">


            <TextView
                android:id="@+id/tv_level_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:text="危险等级"
                app:layout_constraintRight_toLeftOf="@id/chartview"
                app:layout_constraintTop_toTopOf="@id/chartview" />

            <TextView
                android:id="@+id/tv_quezhen_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="确诊 -"
                app:layout_constraintBottom_toTopOf="@id/tv_jigaowei_tag"
                app:layout_constraintRight_toRightOf="@id/tv_level_tag"
                app:layout_constraintTop_toBottomOf="@id/tv_level_tag" />

            <TextView
                android:id="@+id/tv_jigaowei_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="极高危 -"
                app:layout_constraintBottom_toTopOf="@id/tv_gaowei_tag"
                app:layout_constraintRight_toRightOf="@id/tv_level_tag"
                app:layout_constraintTop_toBottomOf="@id/tv_quezhen_tag" />

            <TextView
                android:id="@+id/tv_gaowei_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="高危 -"
                app:layout_constraintBottom_toTopOf="@id/tv_zhongwei_tag"
                app:layout_constraintRight_toRightOf="@id/tv_level_tag"
                app:layout_constraintTop_toBottomOf="@id/tv_jigaowei_tag" />

            <TextView
                android:id="@+id/tv_zhongwei_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="中危 -"
                app:layout_constraintBottom_toTopOf="@id/tv_diwei_tag"
                app:layout_constraintRight_toRightOf="@id/tv_level_tag"
                app:layout_constraintTop_toBottomOf="@id/tv_gaowei_tag" />

            <TextView
                android:id="@+id/tv_diwei_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_3"
                android:text="低危 -"
                app:layout_constraintBottom_toBottomOf="@id/chartview"
                app:layout_constraintRight_toRightOf="@id/tv_level_tag"
                app:layout_constraintTop_toBottomOf="@id/tv_zhongwei_tag" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="日期"
                app:layout_constraintBottom_toBottomOf="@id/chartview"
                app:layout_constraintRight_toRightOf="@id/chartview" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartview"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_150"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chartview" />


        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>