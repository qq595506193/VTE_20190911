<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".activity.RuestionnaireActivity">

    <include layout="@layout/gray_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_all_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="全部0人"
            android:textSize="@dimen/sp_8"
            android:textColor="#c1c1c1" />

        <Button
            android:id="@+id/btn_senior"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/search_bg"
            android:text="高级"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toLeftOf="@id/btn_senior"
            android:background="@drawable/senior_bg"
            android:text="搜索"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/ed_search"
            android:maxLines="1"
            android:textColorHint="#bfbfbf"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_bg"
            android:layout_toLeftOf="@id/btn_search"
            android:hint="请输入患者姓名" />

    </RelativeLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:background="#eae9e9" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="8">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="病历号"
            android:textColor="#333333"

            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名"

            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="性别"

            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"

            android:gravity="center"
            android:text="年龄"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />



        <TextView
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="主管医生"

            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="主管护士"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />


        <TextView
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="风险等级"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />
        <TextView
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="报告"
            android:textColor="#333333"
            android:textSize="@dimen/dp_10" />
    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/rlv_not_assessed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_1"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</LinearLayout>