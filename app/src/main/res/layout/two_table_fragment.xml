<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cly_01_02"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/rg_select_02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/rb_score_01_02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="高风险" />


        </RadioGroup>

        <Button
            android:id="@+id/btn_log_02"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/btn_sure"
            android:text="日志"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <ScrollView
        android:id="@+id/scll_02"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/tv_bottom_bar_02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cly_01_02">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_score_01_02"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_20"
                android:background="@color/gray_text"
                android:gravity="center"
                android:text="合并症或并发症"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_question_check_01_02"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_score_01_02" />

            <TextView
                android:id="@+id/tv_score_02_02"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_20"
                android:background="@color/gray_text"
                android:gravity="center"
                android:text="患者自身因素"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_question_check_01_02" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_question_check_02_02"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_score_02_02" />

            <TextView
                android:id="@+id/tv_score_03_02"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_20"
                android:background="@color/gray_text"
                android:gravity="center"
                android:text="治疗相关因素"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_question_check_02_02" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_question_check_03_02"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_score_03_02" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/tv_bottom_bar_02"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scll_02">


        <Button
            android:id="@+id/btn_sign_list_02"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@drawable/btn_sure"
            android:text="提交"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/lly_02_02"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_20"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="出血模型总分:" />

                <TextView
                    android:id="@+id/tv_score_sum_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0分" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="危险等级:" />

                <TextView
                    android:id="@+id/tv_level_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />


            </LinearLayout>

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>