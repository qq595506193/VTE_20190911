<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".activity.RiskActivity">
    <LinearLayout
        android:id="@+id/llll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_27"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#e7e7e7"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_fraction"
                android:layout_width="@dimen/dp_76"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:textColor="#ffff"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/search_bg"
                android:layout_marginRight="@dimen/dp_12"
                android:text="风险因素总分:0" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_result"
                android:layout_width="@dimen/dp_76"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_height="@dimen/dp_18"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:background="@drawable/senior_bg"
                android:text="查看评估结果" />
        </RelativeLayout>

    </LinearLayout>
    <ScrollView
        android:id="@+id/sc"
        android:layout_above="@id/llll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ic_incl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:textSize="@dimen/sp_10"
                android:background="#e7e7e7"
                android:gravity="center" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl_one"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/txt_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:textSize="@dimen/sp_10"
                android:background="#e7e7e7"
                android:gravity="center" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl_two"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/txt_three"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:textSize="@dimen/sp_10"
                android:background="#e7e7e7"
                android:gravity="center" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl_three"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/txt_four"
                android:textSize="@dimen/sp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:background="#e7e7e7"
                android:gravity="center" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl_four"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/ic_incl"
        layout="@layout/gray_title_layout" />


</RelativeLayout>